
<div class="row">
    <div class="col-md-6">
      <h4 class="red_font"> <img src="../public/assets/img/Hamburger-ready.gif" class="img-fluid" alt="burger">Ready to eat!</h4>
      <div id="ready_to_eat">
        {{#each burgers}}
          {{#unless devoured}}
          <form action="burger/eat/{{id}}" method="POST">
            <div  id="eaten" class="input-group">
              <li class="form-control">{{this.burger_name}}</li>
                <span class="input-group-btn">
                  <button class="btn btn-success devour-button" type="submit">Devour It!</button>
                </span>
            </div>
          </form>
          {{/unless}}
        {{/each}}
      </div>
    </div>
    <div class="col-md-6">
      <h4 class="red_font"><img src="../public/assets/img/Hamburger-eaten.gif" class="img-fluid" alt="burger">Already eaten!</h4>
      <div id="already_eaten">
        {{#each burgers}}
          {{#if this.devoured}}
            <div id="eaten" class="input-group">
              <li class="form-control">{{this.burger_name}}</li>
              <span class="input-group-btn">
                <button class="btn btn-info already-eaten" type="button">🍔</button>
              </span>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
</div>