
<div class="row">
  <center>
    <div class="col-md-6">
      <h4 class="red_font">Ready to eat!</h4>
      <div id="ready_to_eat">
        {{#each burgers}}
          {{#unless devoured}}
          <form action="api/burger/eat/{{id}}" method="POST">
            <div class="input-group">
              <li class="form-control">{{burger_name}}</li>
                <span class="input-group-btn">
                  <button class="btn btn-success devour-button" type="submit">Devour It!</button>
                </span>
            </div>
          </form>
          {{/unless}}
        {{/each}}
      </div>
    </div>

    <div class="col-md-6">
      <h4 class="red_font">Already eaten!</h4>
      <div id="already_eaten">
        {{#each burgers}}
          {{#if devoured}}
            <div class="input-group">
              <li class="form-control">{{burger_name}}</li>
              <span class="input-group-btn">
                <button class="btn btn-info whine-button" type="button">🍔</button>
              </span>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </center>
</div>